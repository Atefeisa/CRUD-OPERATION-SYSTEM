@model ResetPasswordViewModel;

@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}


<div class="main-agileinfo">

	<div class="agileits-top my-3">

		<div asp-validation-summary="All"></div>

		<form asp-action="ResetPassword" >

			<input class="text" asp-for="NewPassword" placeholder="NewPassword" required>

			<input class="text" asp-for="ConfirmPassword" placeholder="ConfirmPassword" required>



			<input type="submit" value="Reset Password">
		</form>


	</div>

</div>

@section ValidationScriptSection {

    <partial name="_ValidationScriptPartial" />
}
