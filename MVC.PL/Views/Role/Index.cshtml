@model IEnumerable<RoleViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>All Roles</h1>
<br />


<div class="row justify-content-center align-items-center m-2">

    <form asp-action="Index" class="row col-8">

        <div class="col-8">
            <input type="search" name="SearchInput" id="SearchInput" class="form-control" placeholder="-- Search --" />
        </div>

        <div class="col-4">
            <input type="submit" value="Search" class="btn btn-success" />
        </div>

    </form>

</div>


<a  asp-action="Create" class="btn btn-primary m-3"> Create Role  </a>
<br />




@if (Model.Count() > 0)
{

    <table class="table table-striped table-hover table-bordered text-center">

        <thead>

            <tr>

                <th> @Html.DisplayNameFor(R => R.Id) </th>
                <th> @Html.DisplayNameFor(R => R.RoleName) </th>
                <th> Details </th>
                <th> Update </th>
                <th> Delete </th>

            </tr>

        </thead>


        <tbody>

            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.Id</td>
                    <td>@role.RoleName</td>
                    <partial name="_ButtonPartialView" model="@role.Id" />

                </tr>
            }

        </tbody>

    </table>

}

else
{

    <div class=" mt-4 alert alert-danger">
        <h3> There Is No Roles :( </h3>
    </div>


}