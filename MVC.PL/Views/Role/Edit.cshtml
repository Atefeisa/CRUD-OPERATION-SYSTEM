@model RoleViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1> Edit Role </h1>

<br />



<form asp-action="Edit">

    <partial name="RolePartialViews/_CreateEditRoleView" model="@Model" />

    <a asp-action="AddOrRemoveUsers" asp-route-roleId="@Model.Id" class="my-3 btn btn-success"> Add Or Remove Users  </a>
    <br/>
    <input type="submit" value="Save" class="btn btn-primary" />
    
    <a asp-action="Index" class="btn btn-light">Back To List</a>

</form>

@section ValidationScriptSection {
    <partial name="_ValidationScriptPartial" />
}
