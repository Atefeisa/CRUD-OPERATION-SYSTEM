@model IEnumerable<UserViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>All Users</h1>
<br/>



<div class="row justify-content-center align-items-center m-5">

    <form asp-action="Index" class="row col-8">
        <div class="col-8">
            <input type="search" name="SearchInput" id="SearchInput" class="form-control" placeholder="-- Search --" />
        </div>

        <div class="col-4">
            <input type="submit" value="Search" class="btn btn-success" />
        </div>
    </form>

</div>
 




@if (Model.Count() > 0)
{

    <table class="table table-striped table-hover table-bordered text-center">

        <thead>

            <tr>
                <th> @Html.DisplayNameFor(U => U.Id) </th>
                <th> @Html.DisplayNameFor(U => U.FName) </th>
                <th> @Html.DisplayNameFor(U => U.LName) </th>
                <th> @Html.DisplayNameFor(U => U.Email) </th>
                <th> @Html.DisplayNameFor(U => U.Roles) </th>
                <th> Details </th>
                <th> Update </th>
                <th> Delete </th>

            </tr>

        </thead>


        <tbody>

            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>

                    <td>@user.FName</td>
                    <td>@user.LName</td>
                    <td>@user.Email</td>
                    <td>@string.Join(" ",user.Roles)</td>
                    <partial name="_ButtonPartialView" model="@user.Id" />

                </tr>
            }

        </tbody>

    </table>

}

else
{

    <div class=" mt-4 alert alert-danger">
        <h3> There Is No Users :( </h3>
    </div>


}